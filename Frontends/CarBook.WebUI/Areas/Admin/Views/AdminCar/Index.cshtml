@model List<ResultCarWithBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalar ile ilgili ekleme, silme, güncelleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Vites</th>
                                        <th>Kilometre</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Özellik Ata</th>
                                        <th>Detaylar</th>
                                        <th>Sitede Gör</th>
                                        <th>Fiyat Bilgisi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.BrandName</td>
                                            <td>@item.Model</td>
                                            <td>@item.Transmission</td>
                                            <td>@item.Kilometer</td>
                                            <td><a href="Admin/AdminCar/RemoveCar/@item.CarId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="Admin/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="Admin/Admin/AdminCarFeature/CreateFeatureByCarId" class="btn btn-outline-info">Özellik Ata</a></td>
                                            <td><a href="Admin/Admin/AdminCarFeature/Index/@item.CarId" class="btn btn-outline-dark">Detaylar</a></td>
                                            <td><a href="Admin/AdminCar/DetailCar/@item.CarId" class="btn btn-outline-warning">Sitede Gör</a></td>
                                            <td><a href="Admin/AdminCar/DetailCar/@item.CarId" class="btn btn-outline-secondary">Fiyat Bilgileri</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="Admin/AdminCar/CreateCar/" class="btn btn-outline-primary">Araç Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>